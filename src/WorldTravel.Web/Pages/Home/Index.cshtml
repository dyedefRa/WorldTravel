@page
@using Microsoft.AspNetCore.Mvc.Localization
@using WorldTravel.Localization
@using WorldTravel.Extensions
@inject IHtmlLocalizer<WorldTravelResource> L
@model WorldTravel.Web.Pages.Home.IndexModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section styles {
    <style>

        .top-text {
            text-align: center;
        }

            .top-text h6 {
                color: #fff;
                font-size: 15px;
                font-weight: 500;
                text-transform: uppercase;
            }

            .top-text h2 {
                color: #fff;
                font-size: 45px;
                font-weight: 800;
                text-transform: capitalize;
                margin-top: 15px;
                margin-bottom: 45px;
            }

        .home-search-form {
            background-color: #fff;
            padding: 0px 0px 0px 30px;
            width: 100%;
            border-radius: 7px;
            display: inline-block;
            text-align: center;
        }

            .home-search-form select,
            .home-search-form input {
                width: 100%;
                height: 36px;
                background-color: transparent;
                border: none;
                color: #2a2a2a;
                font-size: 15px;
                outline: none;
            }

        .form-select:focus {
            box-shadow: none;
        }

        .home-search-form input.searchText {
            border-left: 1px solid #8d99af;
            border-right: 1px solid #8d99af;
            padding: 0px 30px;
        }

        .home-search-form input::placeholder {
            color: #2a2a2a;
            font-size: 15px;
        }

        .home-search-form button {
            width: 100%;
            height: 100%;
            background-color: #8d99af;
            border: none;
            padding: 15px;
            color: #fff;
            font-size: 15px;
            border-top-right-radius: 7px;
            border-bottom-right-radius: 7px;
        }

            .home-search-form button i {
                width: 40px;
                height: 40px;
                background-color: #fff;
                border-radius: 50%;
                color: #8d99af;
                display: inline-block;
                text-align: center;
                line-height: 38px;
                margin-right: 10px;
            }

    </style>
}


<div class="slideshow slideshow-wrapper">
    <div class="home-slideshow">
        <div class="slide">
