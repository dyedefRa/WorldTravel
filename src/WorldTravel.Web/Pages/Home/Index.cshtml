<!--Collection Box slider-->
@if (Model.CountryContent.Any())
{
    <div class="collection-box fadeIn section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="section-header text-center">
                        <h2 class="h2">@L["PopulerCountries"]</h2>
                        <p></p>
                    </div>
                </div>
            </div>
            <div class="collection-grid-4item">
                @foreach (var countryContent in Model.CountryContent)
                {
                    <div class="collection-grid-item p05">
                        <a href="/Country/Detail?Id=@countryContent.Id" class="collection-grid-item__link">
                            <img data-src="@countryContent.PreviewImageUrl" src="@countryContent.PreviewImageUrl" alt="@L["ImageFailedToLoad"]" class="blur-up lazyload h275" />
                            <div class="collection-grid-item__title-wrapper bt7">
                                <h3 class="collection-grid-item__title btn btn--secondary no-border">@countryContent.Title</h3>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
}
<!--End Collection Box slider-->
