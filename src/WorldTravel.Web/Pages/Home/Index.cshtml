@page
@using WorldTravel.Extensions
@inject Microsoft.Extensions.Localization.IStringLocalizer<WorldTravel.Localization.WorldTravelResource> L
@model WorldTravel.Web.Pages.Home.IndexModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section styles {
    <style>
        .h275 {
            height: 200px;
        }

        .p05 {
            padding: 0 5px;
        }

        .bcg {
            background-color: #f9f9f9;
        }

        .bt7 {
            bottom: -7px !important;
        }
    </style>
}

<!--Home slider-->
<div class="slideshow slideshow-wrapper pb-section wow bounceInUp" data-wow-duration="1s">
    <div class="home-slideshow">
        <div class="slide slideshow--medium">
            <div class="blur-up lazyload">
                <img class="blur-up lazyload" data-src="/web/images/home/home6.jpg" src="/web/images/home/home6.jpg" alt="@L["ImageFailedToLoad"]" title="@L["DefaultImageTitle"]" />
                <div class="slideshow__text-wrap slideshow__overlay classic middle">
                    <div class="slideshow__text-content classic left">
                        <div class="container">
                            <div class="wrap-caption left">
                                <h2 class="h1 mega-title slideshow__title">@L["ProjectSlogan1"]</h2>
                                <span class="mega-subtitle slideshow__subtitle">@L["ProjectSlogan2"]</span>
                                <a class="btn" href="#about"> @L["ClickForInformation"] </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="slide slideshow--medium">
            <div class="blur-up lazyload">
                <img class="blur-up lazyload" data-src="/web/images/home/home7.jpg" src="/web/images/home/home7.jpg" alt="@L["ImageFailedToLoad"]" title="@L["DefaultImageTitle"]" />
                <div class="slideshow__text-wrap slideshow__overlay classic middle">
                    <div class="slideshow__text-content classic left">
                        <div class="container">
                            <div class="wrap-caption left">
                                <h2 class="h1 mega-title slideshow__title">@L["ProjectSlogan1"]</h2>
                                <span class="mega-subtitle slideshow__subtitle">@L["ProjectSlogan2"]</span>
                                <a class="btn" href="#about"> @L["ClickForInformation"] </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End Home slider-->
@if (Model.CountryContent.Any())
{
    <div class="collection-box section wow bounceInLeft" data-wow-duration="4s">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="section-header text-center">
                        <h2 class="h2">@L["PopulerCountries"]</h2>
                        <p></p>
                    </div>
                </div>
            </div>
            <div class="collection-grid-4item wow bounceInLeft" data-wow-duration="4s">
                @foreach (var countryContent in Model.CountryContent)
                {
                    <div class="collection-grid-item p05">
                        <a href="/Country/Detail?Id=@countryContent.Id" class="collection-grid-item__link">
                            <img data-src="@countryContent.PreviewImageUrl" src="@countryContent.PreviewImageUrl" alt="@L["ImageFailedToLoad"]" title="@countryContent.Title" class="blur-up lazyload h275" />
                            <div class="collection-grid-item__title-wrapper bt7">
                                <h3 class="collection-grid-item__title btn btn--secondary no-border">@countryContent.Title</h3>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
}
<hr />
@if (Model.VisaType.Any())
{
    <div class="section wow bounceInRight" data-wow-duration="4s">
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="section-header text-center">
                        <h2 class="h2">@L["PopularVisaTypes"]</h2>
                        <p></p>
                    </div>
                </div>
            </div>
            <div class="categories-list-items">
                <div class="row country-items wow bounceInRight" data-wow-duration="4s">
                    @foreach (var visaType in Model.VisaType)
                    {
                        <div class="col-12 col-sm-12 col-md-4 col-lg-4 article country-item" style="padding: 20px;border: 2px solid #f9f9f9;text-align:center;">
                            <a class="article_featured-image" href="/VisaType/Detail?Id=@visaType.Id"><img width="287" height="124" class="blur-up lazyload" data-src="@visaType.PreviewImageUrl" src="@visaType.PreviewImageUrl" title="@visaType.Title" alt="@L["ImageFailedToLoad"]"></a>
                            <h2 class="h3"><a href="/VisaType/Detail?Id=@visaType.Id" class="visaTypeTitle">@visaType.Title</a></h2>
                            <div class="rte">
                                <p>@visaType.ShortDescription.ApplyShortening(200)</p>
                            </div>
                            <ul class="publish-detail">
                                <li><i class="icon anm anm-clock-r"></i> <time>@visaType.CreatedDate.ToTurkishDateString()</time></li>
                            </ul>
                            <p><a href="/VisaType/Detail?Id=@visaType.Id" class="btn btn-secondary btn--small">@L["ReadMore"] <i class="fa fa-caret-right" aria-hidden="true"></i></a></p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
<section id="about" class="bcg">
    <div class="container">
        <div class="about-top text-center">
            <h2 style="font-size: 24px;font-weight: 400;margin-bottom: 40px;">@L["AboutTitle"]</h2>
        </div>
        <div class="about-content">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-2 text-right wow fadeInRight" data-wow-duration="2s">
                    <br />
                    <h4>@Html.Raw(L["AboutCallCenter"])</h4>
                </div>
                <div class="col-md-2 text-center">
                    <img class="rsm-yuvarla wow fadeIn" src="/extensions/golden/images/h-call.png" alt="@L["ImageFailedToLoad"]" title="@L["DefaultImageTitle"]">
                </div>
                <div class="col-md-2"></div>
                <div class="col-md-3"></div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-2"></div>
                <div class="col-md-2 text-center">
                    <img class="rsm-yuvarla wow fadeIn " src="/extensions/golden/images/h-doc-q.jpeg" alt="@L["ImageFailedToLoad"]" title="@L["DefaultImageTitle"]">
                </div>
                <div class="col-md-2 wow fadeInLeft" data-wow-duration="2s">
                    <br />
                    <h4>@Html.Raw(L["AboutDocumentQuestion"])</h4>
                </div>  
                <div class="col-md-3"></div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-2 text-right wow fadeInRight" data-wow-duration="2s">
                    <br />
                    <h4>@Html.Raw(L["AboutHandShake"])</h4>
                </div>
                <div class="col-md-2 text-center ">
                    <img class="rsm-yuvarla wow fadeIn" src="/extensions/golden/images/h-handshake.png" alt="@L["ImageFailedToLoad"]" title="@L["DefaultImageTitle"]">
                </div>
                <div class="col-md-2"></div>
                <div class="col-md-3"></div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-2"></div>
                <div class="col-md-2 text-center">
                    <img class="rsm-yuvarla wow fadeIn" src="/extensions/golden/images/h-doc-t.jpg" alt="@L["ImageFailedToLoad"]" title="@L["DefaultImageTitle"]">
                </div>
                <div class="col-md-2 wow fadeInLeft" data-wow-duration="2s">
                    <br />
                    <h4>@Html.Raw(L["AboutDocumentTick"])</h4>
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-2"></div>
                <div class="col-md-2 text-center wow fadeIn">
                    <div class="about-circle">
                        <div class="indexle">
                            <p style="margin-top:-26px;margin-right:-10px;">@Html.Raw(L["AboutLast"]) </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-2"></div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </div>
</section>

<section id="servisler">
    <div class="container">
        <div class="services-top text-center wow fadeIn">
            <h2 style="font-size: 24px;font-weight: 400;">@L["ServiceTitle"]</h2>
            <marquee behavior="" direction="" onmouseover="this.stop();" onmouseout="this.start();">
                <p> @L["ServiceMarquee"] </p>
            </marquee>
        </div>
        <div class="services-content text-center">
            <div class="row ">
                <div class="col-md-4 wow bounceInLeft" data-wow-duration="2s">
                    <div class="item-circle">
                        <img src="/extensions/golden/images/s_1.png" alt="@L["ImageFailedToLoad"]" title="@L["DefaultImageTitle"]">
                    </div>
                    <h4>@L["ServiceHappy"]</h4>
                    <p>@L["ServiceHappyDescription"]</p>
                </div>
                <div class="col-md-4 wow bounceInDown" data-wow-duration="2s">
                    <div class="item-circle">
                        <img src="/extensions/golden/images/s_2.png" alt="@L["ImageFailedToLoad"]" title="@L["DefaultImageTitle"]">
                    </div>
                    <h4>@L["ServiceGlobal"]</h4>
                    <p>@L["ServiceGlobalDescription"]</p>
                </div>
                <div class="col-md-4 wow bounceInRight" data-wow-duration="2s">
                    <div class="item-circle">
                        <img src="/extensions/golden/images/s_3.png" alt="@L["ImageFailedToLoad"]" title="@L["DefaultImageTitle"]">
                    </div>
                    <h4>@L["ServiceStrongNetwork"]</h4>
                    <p>@L["ServiceStrongNetworkDescription"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="contact">
    <div class="container wow zoomIn" data-wow-duration="2s">
        <div class="cont-top text-center ">
            <h4>@L["ContactTitle"]</h4>
        </div>
        <div class="cont-content">
            <form method="post" class="golden-from" href="/Home">
                @Html.AntiForgeryToken()
                @(await Component.InvokeAsync<Volo.Abp.AspNetCore.Mvc.UI.Theme.Basic.Themes.Basic.Components.PageAlerts.PageAlertsViewComponent>())
                <div class="row">
                    <div class="form-group col-md-6 col-lg-6 col-xl-6">
                        <abp-input asp-for="FormInputModel.Name" label="@L["Name"]" placeholder="@L["ContactNamePlaceHolder"]" class="golden-from-element" />
                    </div>
                    <div class="form-group col-md-6 col-lg-6 col-xl-6">
                        <abp-input asp-for="FormInputModel.Surname" label="@L["Surname"]" placeholder="@L["ContactSurnNamePlaceHolder"]" class="golden-from-element" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6 col-lg-6 col-xl-6">
                        <abp-input asp-for="FormInputModel.Email" label="@L["Email"]" placeholder="@L["ContactEmailPlaceHolder"]" class="golden-from-element" />
                    </div>
                    <div class="form-group col-md-6 col-lg-6 col-xl-6">
                        <abp-input asp-for="FormInputModel.PhoneNumber" class="golden-from-element mobilephone" placeholder="@L["ContactPhonePlaceHolder"]" label="@L["PhoneNumber"]" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6 col-lg-6 col-xl-6">
                        <abp-select asp-for="FormInputModel.Gender" label="@L["Gender"]" class="golden-from-element">
                            <option disabled selected>@L["ContactGenderPlaceHolder"]</option>
                        </abp-select>
                    </div>
                    <div class="form-group col-md-6 col-lg-6 col-xl-6">
                        <abp-select asp-for="FormInputModel.CountryId" label="@L["Country"]" class="golden-from-element">
                            <option disabled selected>@L["ContactCountryPlaceHolder"]</option>
                        </abp-select>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12 col-lg-12 col-xl-12">
                        <abp-input asp-for="FormInputModel.Description" placeholder="@L["ContactDescriptionPlaceHolder"]" class="golden-from-element" />
                    </div>
                </div>
                <div class="row" style="margin-bottom:40px;">
                    <div class="text-center col-12 col-sm-12 col-md-12 col-lg-12">
                        <abp-button text="@L["CreateForm"]" type="submit" class="btn-nice" button-type="Primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
@section scripts {
    <script>
        $(document).ready(function () {
            $('body').addClass('home12-category');
            $('#FormInputModel_BirthDate').attr('type', 'date');
            $('.golden-from label').hide();
            //query temizle

        @if (Model.FormInputModel.IsReturnPost)
        {
            @:$('.contantLink').click();
        }
                window.history.replaceState(null, '', window.location.pathname);
        });
    </script>
}