@using WorldTravel.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.Users
@using WorldTravel.Abstract
@inject IStringLocalizer<WorldTravelResource> L
@inject ICurrentUser CurrentUser
@inject ICountryContentAppService _countryContentAppService
@inject IVisaTypeAppService _visaTypeAppService
@{
    var countryContents = await _countryContentAppService.GetCountryContentListForUserAsync(new WorldTravel.Dtos.CountryContents.GetCountryContentRequestDto() { IsSeenHomePage = true });
    var visaTypes = await _visaTypeAppService.GetVisaTypeListForUserAsync(new WorldTravel.Dtos.VisaTypes.GetVisaTypeRequestDto() { IsSeenHomePage = true });
}
<!--Web Menu-->
<div class="header-wrap classicHeader animated d-flex">
    <div class="container-fluid">
        <div class="row align-items-center">
            <!--Web Logo-->
            <div class="logo col-md-2 col-lg-2 d-none d-lg-block" style="padding-right: 0px;">
                <a href="/Home" style="text-decoration:none;">
                    <div style="display:flex;">
                        <img src="/web/images/world-logo.png" height="40" alt="@L["ImageFailedToLoad"]" title="Anasayfa" />
                        <span class="logo-next-name">@L["ProjectName"]</span>
                    </div>
                </a>
            </div>
            <!--End Web Logo-->
            <div class="col-2 col-sm-3 col-md-3 col-lg-8">
                <div class="d-block d-lg-none">
                    <button type="button" class="btn--link site-header__menu js-mobile-nav-toggle mobile-nav--open">
                        <i class="icon anm anm-times-l"></i>
                        <i class="anm anm-bars-r"></i>
                    </button>
                </div>
                <nav class="grid__item" id="AccessibleNav">
                    <ul id="siteNav" class="site-nav medium right hidearrow">
                        @*<li class="lvl1"><a href="/Admin/Account/Login"><i class="fa fa-user-plus fa-fw"></i> @L["AdminPage"]</a></li>*@
                        @if (countryContents.Count > 0)
                        {
                            <li class="lvl1 parent dropdown">
                                <a href="#">@L["Countries"] <i class="anm anm-angle-down-l"></i></a>
                                <ul class="dropdown">
                                    @foreach (var countryContent in countryContents)
                                    {
                                        <li><a href="/Country/Detail?Id=@countryContent.Id" class="site-nav">@countryContent.Title</a></li>
                                    }
                                    <li><a href="/Country" class="site-nav">@L["SeeAll"] <span class="lbl nm_label1"> @L["New"]</span> </a></li>
                                </ul>
                            </li>
                        }
                        @if (visaTypes.Count > 0)
                        {
                            <li class="lvl1 parent dropdown">
                                <a href="#">@L["Visas"] <i class="anm anm-angle-down-l"></i></a>
                                <ul class="dropdown">
                                    @foreach (var visaType in visaTypes)
                                    {
                                        <li><a href="/VisaType/Detail?Id=@visaType.Id" class="site-nav">@visaType.Title</a></li>
                                    }
                                    <li><a href="/VisaType" class="site-nav">@L["SeeAll"] <span class="lbl nm_label1"> @L["New"]</span> </a></li>
                                </ul>
                            </li>
                        }
                        <li class="lvl1"><a href="#about">@*<i class="fa fa-plus fa-fw"></i>*@ @L["HowProcessWork"]</a></li>
                        <li class="lvl1"><a href="#contact" class="contantLink"><i class="fa fa-phone fa-fw"></i> @L["Contanct"]</a></li>
                    </ul>
                </nav>
                <!--End Web Menu-->
            </div>
        </div>
    </div>
</div>
<!--End Menu-->
